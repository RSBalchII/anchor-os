{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16", // Aligning with Node.js native modules
        "moduleResolution": "node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}